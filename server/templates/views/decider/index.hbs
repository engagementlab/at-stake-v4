<div class="page-container">
    <div id="session-create" class="row">
        <div class="col-sm-12">

            <div class="col-sm-3"></div>
            <div class="submission col-sm-6">
                <div class="form">
                    <div class="form-prompt white">access code:</div>
                    <div id="access-code">{{gameCode}}</div>
                    <div class="form-prompt white">enter username:</div>
                    <input type="text" id="player-name" placeholder="name"> <br />

                    <div class="form-prompt white">select the deck to use:</div>
                    <div id="decks">
                        {{#each decks}}
                            <button value="{{id}}" class="toggle-button inactive">{{name}}</button>
                        {{/each}} 
                    </div> 
                    

                    <div class="error">Error!</div>
                    <input id="btn_submit" data-type="{{gameType}}" class="button_text" type="submit" name="submit" value="Start!">
                </div>
            </div>

        </div>
    </div>

    <div class="row" id="waiting" style="display:none">
        <h1 id="game-code">{{gameCode}}</h1>
        <p>You are the Decider</p>
        <p>Waiting for players</p>


        <div class="col-sm-3"></div>
        <div class="row" id="players">

        </div>
        <div class="col-sm-3"></div>

        <div class="form row" id="start">
        <input id="btn-start-game" data-event="game:start" class="post-button submit" type="submit" name="submit" value="start">
        </div>
    </div>
</div>